<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@android:color/black"
    style="@android:style/TextAppearance.Holo.Widget.Button">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#010101"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="MyCUInfo Login"
            android:id="@+id/button4"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="culogin"
            android:background="@drawable/my_shape"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Buff Bus Tracker"
            android:id="@+id/button2"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="busTracker"
            android:background="@drawable/my_shape"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Dining Hall Menus"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="diningHallMenu"
            android:background="@drawable/my_shape"
            android:layout_margin="5dp"
            android:nestedScrollingEnabled="false" />

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Campus Alerts"
            android:id="@+id/button3"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="campusAlerts"
            android:background="@drawable/my_shape"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Campus Map"
            android:id="@+id/button"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="mapView"
            android:background="@drawable/my_shape"
            android:layout_margin="5dp"/>

    </GridLayout>

</RelativeLayout>
